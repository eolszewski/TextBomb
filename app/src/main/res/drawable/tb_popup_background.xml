<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@drawable/shadow_gray"/>
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item
        android:left=".75dp"
        android:right=".75dp"
        android:top=".75dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@drawable/white"/>
            <corners android:radius="2dp" />
            <padding
                android:bottom="2dip"
                android:left="2dip"
                android:right="2dip"
                android:top="2dip" />
        </shape>
    </item>
</layer-list>